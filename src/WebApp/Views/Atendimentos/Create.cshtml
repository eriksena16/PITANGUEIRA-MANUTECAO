@model Pitangueira.Model.Entities.Atendimento_
@using Pitangueira.Model.Entities.Enums

@{
    ViewData["Title"] = "Create";
}

<h2>Atendimento</h2>
<hr />
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DataExecucao" class="control-label"></label>
                        <input asp-for="DataExecucao" class="form-control" value="@DateTime.Today" disabled />
                        <span asp-validation-for="DataExecucao" class="text-danger"></span>
                    </div>
                    <div><p class="control-label">Adicione um novo tipo ou selecione um existente</p></div>
                    <div class="form-group">
                        <label class="control-label">Novo tipo de atendimento</label>
                        <input asp-for="TipoAtendimento.Name" class="form-control" />
                        <span asp-validation-for="TipoAtendimento.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TipoAtendimentoId" class="control-label"></label>
                        <select asp-for="TipoAtendimentoId" class="form-control" asp-items="ViewBag.TipoAtendimentoId">
                            <option value="">-- Selecione o Tipo --</option>
                        </select>
                        <span asp-validation-for="TipoAtendimentoId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClienteId" class="control-label"></label>
                        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                            <option value="">-- Selecione o Cliente --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Observacao" class="control-label"></label>
                        <textarea asp-for="Observacao" class="form-control" id="exampleTextarea" rows="3"></textarea>
                        <span asp-validation-for="Observacao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
